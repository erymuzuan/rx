@model Bespoke.Sph.Domain.CheckBox
@if (string.IsNullOrWhiteSpace(Model.Enable))
{
    Model.Enable = "true";
}
@if (Model.IsCompact)
{
    <label class="checkbox" data-bind="visible:@Model.Visible">
        <input data-i18n="@Model.Label" data-bind="@(Html.Raw(Model.GetKnockoutBindingExpression()))" id="@Model.Path" title="@Model.Tooltip" type="checkbox" name="@Model.Path" />
        @Model.Label
    </label>
}
else
{

    <div class="form-group" data-bind="visible:@Model.Visible">
        <div class="col-md-offset-@(@Model.LabelColMd ?? 4) @Model.InputPanelCssClass">
            <div class="checkbox">
                <label class="checkbox">
                    <input data-bind="@(Html.Raw(Model.GetKnockoutBindingExpression()))" id="@Model.Path" title="@Model.Tooltip" type="checkbox"
                           name="@Model.Path"/>
                    <span data-i18n="@Model.Label">@Model.Label</span>
                    
                </label>
            </div>
        </div>
    </div>
}

