@model Bespoke.Sph.Domain.TextBox

@if (Model.IsCompact)
{
    <span class="col-md-8" data-bind="text: @Model.Path, visible:@Model.Visible"></span>

}
else
{
    <div class="form-group" data-bind="visible:@Html.Raw(Model.Visible)">
        <label class="col-md-4">@Model.Label</label>
        <span class="col-md-8" data-bind="text: @Model.Path"></span>
    </div>
}