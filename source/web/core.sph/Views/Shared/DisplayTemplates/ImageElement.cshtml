@model Bespoke.Sph.Domain.ImageElement
@{
    var path = string.Format("'/sph/image/store/' + {0}()", this.Model.Path);
    var width = Model.Width.HasValue ? "width=\"" + Model.Width.Value + "\"" : "";
    var height = Model.Height.HasValue ? "height=\"" + Model.Height.Value + "\"" : "";

    if (string.IsNullOrWhiteSpace(Model.Enable))
    {
        Model.Enable = "true";
    }
}

@if (!Model.IsCompact)
{
    <label class="col-md-@(Model.LabelColMd ?? 4)">@Model.Label</label>
}
<img data-test="987" alt="@Model.Label" title="@Model.Tooltip" @Html.Raw(width) @Html.Raw(height)  data-bind="attr : {'src':@Html.Raw(path)}, visible:@Html.Raw(Model.Visible)" />