@model Bespoke.Sph.Domain.BuildingMapElement

<div class="control-group" data-bind="visible:@Model.Visible">
    <label for="@Model.ElementId" class="control-label">@Model.Label</label>
    <div class="controls">
        <button title="@Model.Tooltip" id="@Model.ElementId" class="@Model.CssClass" data-bind="click: $root.showMapCommand">
            <!-- ko if : staticMap -->
            <img data-bind="attr : {src:staticMap}" src="/Images/no-image.png" alt="map" />
            <!-- /ko  -->
            <!-- ko ifnot : staticMap -->
            <i class="@Model.Icon"></i>
            @Model.Label
            <!-- /ko  -->
            </button>
        @if (!string.IsNullOrWhiteSpace(Model.HelpText))
        {
            <span class="help-inline">@Model.HelpText</span>
        }
    </div>
</div>