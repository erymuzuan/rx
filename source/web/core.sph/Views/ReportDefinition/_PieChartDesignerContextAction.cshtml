<section class="btn-group pull-right" data-bind="visible: isSelected">
    <button class="btn btn-link btn-context-action">
        <i class="fa fa-chevron-circle-right"></i>
    </button>
    <div class="context-action alert alert-info">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <span>Pie Chart Properties</span>
        </div>
        <div class="form-group">
            <label class="control-label">Title</label>
            <div class="controls">
                <input class="form-control" data-bind="value: Title" name="Title-linechart" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Category Field</label>
            <div class="controls">
                <input data-bind="value: CategoryField"  name="ValueLabelFormat" />
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Value Field</label>
            <div class="controls">
                <input data-bind="value: ValueField" type="text" name="HorizontalAxisField" />
            </div>
        </div>
        <a class="btn btn-link pull-right" data-bind="click: $root.removeReportItem">
            <i class="glyphicon glyphicon-remove"></i>
            Buang
        </a>
        @*   </form>*@
    </div>
</section>
