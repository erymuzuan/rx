<section class="context-action-panel" data-bind="visible: isSelected">
    <button class="btn btn-link btn-context-action">
        <i class="fa fa-chevron-circle-right"></i>
    </button>

    <div class="context-action" style="width: 720px">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <span>DataGrid Properties</span>
        </div>
        <table class="table table-striped">
            <colgroup>
                <col style="width: 240px" />
                <col style="width: 200px" />
                <col style="width: 100px" />
                <col style="width: 200px" />
            </colgroup>
            <thead>
                <tr>
                    <th>Expression</th>
                    <th>Header</th>
                    <th>Format</th>
                    <th>Footer</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: DataGridColumnCollection">
                <tr>
                    <td>
                        <input class="input-datagrid-column-expression form-control " data-bind="kendoComboBox: Expression, source: $root.dataGridColumnOptions" />
                    </td>
                    <td><input type="text" class="input-datagrid-column-header form-control" data-bind="value: Header" /></td>
                    <td>
                        <input class="form-control" data-bind="kendoComboBox:Format, source :ko.observableArray(['{0:d}','{0:F2}','{0:g}', '{0:c}'])" />
                    </td>
                    <td>
                        <input type="text" class="input-datagrid-column-footer form-control" data-bind="value: FooterExpression" />
                    </td>
                    <td><a href="#" data-bind="click : $parent.removeColumn.call($parent,$data)"><i class="fa fa-times"></i></a></td>
                </tr>
            </tbody>
        </table>


        <a class="btn btn-link" data-bind="click : addColumn">
            <i class="fa fa-plus-circle"></i>

            Add a column
        </a>
        <table class="table table-striped">
            <colgroup>
                <col style="width: 100px" />
                <col style="width: 100px" />
                <col style="width: 30px" />
                <col style="width: 100px" />
            </colgroup>
            <thead>
                <tr>
                    <th>Column</th>
                    <th>Text</th>
                    <th>Footer</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: DataGridGroupDefinitionCollection">
                <tr>
                    <td>
                        <input class="input-datagrid-group-column form-control " data-bind="kendoComboBox: Column, source: $root.columnOptions" />
                    </td>
                    <td><input type="text" class="form-control input-datagrid-group-expression" data-bind="value: Expression" /></td>
                    <td>
                        <input class="form-control input-datagrid-group-footer" data-bind="value: FooterExpression" />
                    </td>
                    <td><a href="#" data-bind="click: $parent.removeDataGridGroupDefinition.call($parent, $data)"><i class="fa fa-times"></i></a></td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-link" data-bind="click: addDataGridGroupDefinition">
            <i class="fa fa-plus-circle"></i>
            Add a group
        </a>

        <a class="btn btn-link pull-right" data-bind="click: $root.removeReportItem">
            <i class="fa fa-times"></i>
            Remove
        </a>


    </div>
</section>
