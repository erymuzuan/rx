@model Bespoke.Sph.Domain.LabelItem

<!--ko if: ko.unwrap($data['$type']) === "Bespoke.Sph.Domain.TextBox, domain.sph" -->
<div data-bind="css: { 'selected-form-element': isSelected }, click: $root.selectFormElement" class="control-group">
    @Html.Partial("_DesignerContextAction")
    <label data-bind="text: Label" class="control-label"></label>
    <div class="controls">
        <input type="text" data-bind="attr: { 'title': Tooltip, 'class': CssClass() + ' ' + Size() }" />

        <span data-bind="text: HelpText" class="help-inline"></span>
    </div>
</div>
<!--/ko-->
