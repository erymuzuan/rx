@model Bespoke.Sph.Domain.AddressElement

<!--ko if:$data['$type']() === "Bespoke.Sph.Domain.AddressElement, domain.sph" -->

<div class="form-group" data-bind="css: { 'selected-form-element': isSelected }, click: $root.selectFormElement">
    @Html.Partial("_DesignerContextAction")
    <div>
        <h3 data-bind="text: Label"></h3>
    </div>
    <div>
        <div class="form-group" data-bind="visible: IsUnitNoVisible">
            <label class="control-label col-lg-2">No Unit</label>
            <div class="col-lg-4">
                <input class="form-control" type="text" />
            </div>
        </div>
        <div class="form-group" data-bind="visible: IsBlockVisible">
            <label class="control-label col-lg-2">Blok</label>
            <div class="col-lg-4">
                <!-- ko if : BlockOptionsPath -->
                <select class="form-control"></select>
                <!-- /ko -->
                <!-- ko ifnot : BlockOptionsPath -->
                <input class="form-control" type="text" />
                <!-- /ko -->
            </div>
        </div>
        <div class="form-group" data-bind="visible: IsFloorVisible">
            <label class="control-label col-lg-2">Tingkat</label>
            <div class="col-lg-4">
                <input type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group" >
            <label class="control-label col-lg-2">Jalan</label>
            <div class="col-lg-4">
                <input type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group" >
            <label class="control-label col-lg-2">Bandar/Daerah</label>
            <div class="col-lg-4">
                <input type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group" >
            <label class="control-label col-lg-2">Poskod</label>
            <div class="col-lg-4">
                <input type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group" >
            <label class="control-label col-lg-2">Negeri</label>
            <div class="col-lg-4">
                <select class="form-control">
                    <option value="Kelantan">Kelantan</option>
                </select>
            </div>
        </div>
    </div>
</div>
<!--/ko-->
