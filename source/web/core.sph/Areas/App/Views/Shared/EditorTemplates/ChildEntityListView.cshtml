@model Bespoke.Sph.Domain.ChildEntityListView



<!--ko if:ko.unwrap($type) === "Bespoke.Sph.Domain.ChildEntityListView, domain.sph" -->


<div class="form-group">
    <label for="celv-entity" class="control-label">Entity</label>

    <input type="text" data-bind="value: Entity, tooltip :'The child entity name'"
           required pattern="^[A-Za-z_][A-Za-z0-9_ ]*$"
           placeholder="Child entity name"
           class="form-control" id="celv-entity">

</div>

<div class="form-group">
    <label for="celv-query" class="control-label">Query</label>

    <input type="text" data-bind="value: Query, tooltip : 'Query text to filter the child items'"
           required placeholder="Query"
           class="form-control" id="celv-query">

</div>
<div class="btn-group">
    <a data-bind="click : addViewColumn" class="btn btn-link" href="#">
        +  Column
    </a>
</div>




<table class="table table-condensed table-striped">
    <thead>
        <tr>
            <th>Header</th>
            <th>Path</th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: ViewColumnCollection">
        <tr>
            <td>
                <a href="#" data-bind="click : $parent.editViewColumn.call($parent,$data),text: Header"></a>
            </td>
            <td data-bind="text:Path">
            </td>
            <td>
                <a href="#" data-bind="click : $parent.removeViewColumn.call($parent,$data)">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
            </td>
        </tr>
    </tbody>
</table>

<!--/ko-->
