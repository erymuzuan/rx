@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Users Management</h1>

<div class="row">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#user-tab" data-toggle="tab">Users</a>
        </li>
        <li>
            <a href="#designation-tab" data-toggle="tab">Designations</a>
        </li>
        <li>
            <a href="#department-tab" data-toggle="tab">Departments</a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="user-tab" class="tab-pane active">
            <div class="search-panel row" data-bind="with: searchTerm">
                <form class="form-inline col-lg-12">
                    <div class="row">
                        <div class="form-group col-lg-3">
                            <label class="">Department</label>
                        </div>
                        <div class="form-group">
                            <select class="form-control col-lg-3" data-bind="options: $root.departmentOptions, value: department, optionsText: 'Name', optionsValue: 'Name'"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-1 sr-only">Kata Kunci</label>
                            <input placeholder="Keywords" class="form-control col-lg-2" type="text" data-bind="value: keyword" required />
                        </div>
                        <div class="form-group col-lg-2 pull-right">
                            <button type="submit" class="btn btn-default" id="search-btn">
                                <i class="fa fa-search pull-left"></i>
                                Search
                            </button>
                        </div>

                    </div>

                </form>
            </div>
            <div>
                <table class="table table-striped" data-bind="serverPaging: { entity: 'UserProfile', query: 'UserProfileId gt 0', list: profiles, map: map }">
                    <thead>
                        <tr>
                            <th>UserName</th>
                            <th>Full name</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Email</th>
                            <th>Password</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: profiles">
                        <tr>
                            <td>
                                <a data-toggle="modal" href="#user-details-modal" data-bind="click: $root.editCommand">
                                    <i class="fa fa-user"></i>
                                    <!-- ko text: UserName-->
                                    <!-- /ko-->
                                </a>

                            </td>
                            <td data-bind="text: FullName"></td>
                            <td data-bind="text: Department"></td>
                            <td data-bind="text: Designation"></td>
                            <td data-bind="text: Email"></td>
                            <td>
                                <a data-toggle="modal" href="#user-change-password" data-bind="click: $root.resetPasswordCommand">Reset</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div id="designation-tab" class="tab-pane ">
            <!--ko compose:'viewmodels/_users.designation' -->
            <!--/ko-->
        </div>
        <div id="department-tab" class="tab-pane ">
            <!--ko compose:'viewmodels/_users.department' -->
            <!--/ko-->
        </div>
    </div>
</div>
