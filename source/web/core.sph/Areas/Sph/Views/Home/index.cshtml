@using System.Configuration
@using System.Web.Mvc.Html
@using System.Web.Optimization
@{
    Layout = null;
    var theme = ConfigurationManager.AppSettings["theme"];
}
<!DOCTYPE html>
<html>
<head>
    <title>@Bespoke.Sph.Domain.ConfigurationManager.ApplicationName</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @*@Styles.Render("~/Content/css")*@
    <link href="~/Content/css.css" rel="stylesheet" />
    <link href="~/Content/nprogress.css" rel="stylesheet" />
    <meta name="description" content="The description of my page" />
</head>
<body>
    <div id="applicationHost">
        @Html.Partial("_splash")
    </div>

    @*@Scripts.Render("~/scripts/vendor")
        @Scripts.Render("~/scripts/core")
        @Scripts.Render("~/scripts/domain.schema")
        @Scripts.Render("~/scripts/domain.prototypes")
        @Scripts.Render("~/scripts/domain.partials")
        @Scripts.Render("~/scripts/themes")*@
    <script src="~/SphApp/objectbuilders.js"></script>
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <script src="~/Scripts/vendor.js"></script>
        <script src="~/Scripts/nprogress.js"></script>
        <script src="~/Scripts/jstree.min.js"></script>
        <script src="~/Scripts/core.js"></script>
        <script src="~/Scripts/_ko.entity.js"></script>
        <script src="~/SphApp/schemas/domain.js"></script>
        <script src="~/SphApp/prototypes/prototypes.js"></script>
        <script src="~/SphApp/partial/partial.js"></script>
        <script type="text/javascript" src="~/entitydefinition/schemas"></script>
        <script src="~/Content/theme.@theme/theme.js"></script>
        <script src="~/kendo/js/kendo.all.js"></script>
    }
    else
    {
        <script src="~/Scripts/vendor.min.js"></script>
        <script src="~/Scripts/jstree.min.js"></script>
        <script src="~/Scripts/core.min.js"></script>
        <script src="~/Scripts/nprogress.js"></script>
        <script src="~/Sph/schemas/domain.min.js"></script>
        <script src="~/Sph/prototypes/prototypes.min.js"></script>
        <script src="~/Sph/partial/partial.min.js"></script>
        <script type="text/javascript" src="~/entitydefinition/schemas"></script>
        <script src="~/Content/theme.@theme/theme.js"></script>
        <script src="~/kendo/js/kendo.all.js"></script>
    }


    <script type="text/javascript" src="~/Scripts/require.js" data-main="SphApp/main"></script>



    @*<script type="text/javascript" src="https://www.google.com/jsapi"></script>*@
</body>
</html>
