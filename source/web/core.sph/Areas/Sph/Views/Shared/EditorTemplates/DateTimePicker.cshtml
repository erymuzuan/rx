@model Bespoke.Sph.Domain.DateTimePicker
@if (string.IsNullOrWhiteSpace(Model.Enable))
{
    Model.Enable = "true";
}

@if (Model.IsCompact)
{
    <input class="@(Model.CssClass + " form-control "+ Model.Size)"
           data-bind="@(Html.Raw(Model.GetKnockoutBindingExpression()))" id="@Model.ElementId" type="text"
           name="@Model.Path" />
}
else
{

    <div class="form-group">
        <label for="@Model.ElementId" class="@Model.LabelCssClass">@Model.Label</label>
        <div class="@Model.InputPanelCssClass">
            <input class="@(Model.CssClass + " form-control "+ Model.Size)"
                   data-bind="@(Html.Raw(Model.GetKnockoutBindingExpression()))" id="@Model.ElementId" type="text"
                   name="@Model.Path" />
        </div>
    </div>
}