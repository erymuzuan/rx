@{
    ViewBag.Title = "Contact";
}

<div class="row-fluid section" id="contact">
    <!-- MAP  -->

    <div class="container">
        <h2>Contact</h2>
        <p class="intro hidden-phone">Our location.</p>
    </div>
    <div class="container">
    <div class="container hidden-phone" id="map">
        <div class="span5 offset2">
            </div>
        </div>
    </div>
    <!-- /container -->
</div>

<div id="form">
    <div class="container">
        <div class="row">
            <div class="span8">
                <h3>Contact Form</h3>
                <form id="contact-form">

                    <fieldset>
                        <div class="row">
                            <div class="holder span8"><div class="message"><div class="top"></div><div class="contents"><div id="alert"></div></div><div class="bottom"></div></div></div>
                            <div class="field span8"><input type="text" value="" class="input-text m-wrap m-ctrl-large" id="name" name="name" placeholder="Your Name" required /></div>
                            <div class="field span8"><input type="text" value="" class="input-text m-wrap m-ctrl-large" id="organization-detail" name="organization" required placeholder="Your Organization/Company" /></div>
                            <div class="field span8"><input type="tel" value="" class="input-text m-wrap m-ctrl-large" id="telephone" name="telephone" placeholder="Your Telephone" /></div>
                            <div class="field span8"><input type="email" value="@ViewBag.Email" class="input-text m-wrap m-ctrl-large" id="email" name="email" required placeholder="Your Email Address" /></div>
                            <div class="field span8"><textarea class="input-textarea m-wrap m-ctrl-large" id="message" name="message" placeholder="Your Message"></textarea></div>
                            <div class="field span8"><input type="submit" class="m-btn green" value="Submit" /></div>
                        </div>
                    </fieldset>
                </form>
            </div>

            <div class="span4">
                @*<h3>Social Networks</h3>
                    <ul class="contactlinks">
                        <li><a href="#"><i class="icon-twitter-sign icon-large"></i>Twitter</a></li>
                        <li><a href="#"><i class="icon-facebook-sign icon-large"></i>Facebook</a></li>
