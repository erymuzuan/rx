                        <li><a href="#"><i class="icon-pinterest-sign icon-large"></i>Pinterest</a></li>
                    </ul>*@

                <h3>Contact info</h3>
                <p>
                    Bespoke Technology Sdn Bhd<br>
                    Unit 226, Block A, Lobby 5<br>
                    Damansara Intan<br>
                    47400 Petaling Jaya, Selangor<br>
                    Phone: (603) 7729 4424<br>
                    Fax: (603) 7727 8359<br>
                    Email: admin@bespoke.com.my<br>
                    Web: www.bespoke.com.my
                </p>
            </div>
        </div>
    </div> <!-- /container -->

</div> <!-- /form  -->
@section scripts
{
    <script src="http://maps.google.com/maps/api/js?libraries=places&sensor=false" type="text/javascript"></script>
    <script type='text/javascript'>
        (function () {
            var point = new google.maps.LatLng(3.1303, 101.6289),
                options = {
                    zoom: 16,
                    center: point,
                    mapTypeId: google.maps.MapTypeId.ROADMAP,
                    streetViewControl: false,
                    scaleControl: true,
                    mapTypeControlOptions: { style: google.maps.MapTypeControlStyle.DROPDOWN_MENU },
                    navigationControlOptions: { style: google.maps.NavigationControlStyle.SMALL }
                },
                map = new google.maps.Map(document.getElementById('map'), options),
                shadow = new google.maps.MarkerImage("/images/tulip.png", null, null, point),
                marker = new google.maps.Marker({
                    position: point,
                    map: map,
                    title: "Bespoke Technology",
                    draggable: false,
                    icon: "/images/tulip.png",
                    shadow: shadow
                }),
                info = new google.maps.InfoWindow({
                    content: ""
                });


            map.setCenter(point);

            info.open(map, marker);
            google.maps.event.addListener(marker, 'click', function () {
                info.open(map, marker);
            });

            $('form').submit(function (e) {

                e.preventDefault();
                var $form = $(this),
                    data = $form.serialize();
                $form.find('input[type=submit]')
                    .prop('disabled', true);
                $.post("/Home/Contact", data)
                    .done(function () {
                        $form.html("Thank you for your interest, We will be in touch with you shortly");
                    });
            });
        })();
    </script>
}
