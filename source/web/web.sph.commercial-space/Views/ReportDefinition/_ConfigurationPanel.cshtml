<section class="modal hide absolute-center" style="height: 600px; width: 800px;" id="configuration-panel">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>Configuration</h3>
    </div>
    <div class="modal-body">
        <div class="tabbable">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#general-tab-item" data-toggle="tab">General</a>
                </li>
                <li>
                    <a href="#parameters-tab-item" data-toggle="tab">Parameters</a>
                </li>
                <li>
                    <a href="#datasource-tab-item" data-toggle="tab">Datasource</a>
                </li>
                <li>
                    <a href="#columns-tab-inte" data-toggle="tab">Columns</a>
                </li>
            </ul>
            <div class="tab-content" data-bind="with : reportDefinition">
                <div id="general-tab-item" class="tab-pane active">
                    @Html.Partial("_ConfigurationGeneral")
                </div>
                <div id="parameters-tab-item" class="tab-pane">
                    @Html.Partial("_ConfigurationParameters")
                </div>
                <div id="datasource-tab-item" class="tab-pane">
                    @Html.Partial("_ConfigurationDatasource")
                </div>
                <div id="columns-tab-inte" class="tab-pane">
                    <div data-bind="with: $root">
                        <ul id="entity-columns" data-bind="foreach: entityColumns,filter: { path: 'li>label' }">
                            <li>
                                <label class="checkbox">
                                    <input type="checkbox" data-bind="checked: IsSelected" />
                                    <!-- ko text:Name-->
                                    <!--/ko-->
                                </label>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <h2>Selected Fields</h2>
                        <table class="table table-striped" data-bind="with: DataSource">
                            <thead>
                                <tr>
                                    <th>Field Name</th>
                                    <th>Aggregate</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: EntityFieldCollection">
                            	<tr>
	                                <td>
	                                    <span data-bind="text: Name"></span>
	                                </td>
	                                <td>
                                        <select data-bind="value: Aggregate">
                                            <option value="GROUPBY">Group By</option>
                                            <option value="SUM">Sum</option>
                                            <option value="COUNT">Count</option>
                                            <option value="AVG">Avg</option>
                                        </select>
	                                </td>
                            	</tr>
                            </tbody>
                        </table>       
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
    </div>
</section>
