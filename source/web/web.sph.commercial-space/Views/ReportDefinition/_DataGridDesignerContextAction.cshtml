<section class="btn-group pull-right" data-bind="visible: isSelected">
    <button class="btn btn-link btn-context-action">
        <i class="icon-chevron-sign-right"></i>
    </button>

    <div class="alert alert-info context-action">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <span>DataGrid Properties</span>
        </div>
        <table class="table table-striped">
            <colgroup>
                <col style="width: 100px"/>
                <col style="width: 100px"/>
                <col style="width: 30px"/>
                <col style="width: 100px"/>
            </colgroup>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Header</th>
                    <th>Width</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: ReportColumnCollection">
                <tr>
                    <td><input type="text" data-bind="value: Name" /></td>
                    <td><input type="text" data-bind="value: Header" /></td>
                    <td><input type="text" data-bind="value: Width" /></td>
                    <td><a href="#" data-bind="click : $root.removeDataGridColumn"><i class="icon-remove"></i></a></td>
                </tr>
            </tbody>
        </table>
        <button data-bind="click : $root.addDataGridColumn">+ Column</button>
        <a class="btn btn-link pull-right" data-bind="click: $root.removeReportItem">
            <i class="icon-remove"></i>
            Buang
        </a>


    </div>
</section>
