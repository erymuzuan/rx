<section class="context-action-panel" data-bind="visible: isSelected">
    <button class="btn btn-link btn-context-action">
        <i class="icon-chevron-sign-right"></i>
    </button>

    <div class="context-action">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <span>DataGrid Properties</span>
        </div>
        <table class="table table-striped">
            <colgroup>
                <col style="width: 100px"/>
                <col style="width: 100px"/>
                <col style="width: 30px"/>
                <col style="width: 100px"/>
            </colgroup>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Header</th>
                    <th>Width</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: ReportColumnCollection">
                <tr>
                    <td>
                        <select class="input-datagrid-columnname" data-bind="value: Name, options: $root.dataGridColumnOptions, optionsText: 'Name', optionsValue: 'Name'">
                            
                        </select>
                    </td>
                    <td><input type="text" class="input-datagrid-header" data-bind="value: Header" /></td>
                    <td><input type="text" data-bind="value: Width" /></td>
                    <td><a href="#" data-bind="click : $root.removeDataGridColumn"><i class="icon-remove"></i></a></td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-link" data-bind="click : $root.addDataGridColumn">+ Column</button>
        <a class="btn btn-link pull-right" data-bind="click: $root.removeReportItem">
            <i class="icon-remove"></i>
            Buang
        </a>


    </div>
</section>
