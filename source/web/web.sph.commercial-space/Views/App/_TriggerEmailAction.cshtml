
<section class="modal hide" id="email-action-modal">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>Hantar email notifikasi</h3>
    </div>
    <div class="modal-body" data-bind="with: emailAction">
        <div class="control-group">
            <label for="email-action-title" class="control-label">Tajuk</label>
            <div class="controls">
                <input data-bind="value: Title" id="email-action-title" type="text" name="Title" />
            </div>
        </div>
        <div class="control-group">
            <label for="email-action-to" class="control-label">To</label>
            <div class="controls">
                <input data-bind="value: To" id="email-action-to" type="text" name="Note" />
            </div>
        </div>
        <div class="control-group">
            <label for="email-action-from" class="control-label">From</label>
            <div class="controls">
                <input data-bind="value: From" id="email-action-from" type="text" name="Name" />
            </div>
        </div>
        <div class="control-group">
            <label for="email-action-subject" class="control-label">Subject Template</label>
            <div class="controls">
                <textarea id="email-action-subject" data-bind="value: SubjectTemplate" class="input-xxlarge" rows="5"></textarea>
            </div>
        </div>
        <div class="control-group">
            <label for="email-action-body" class="control-label">Body Template</label>
            <div class="controls">
                <textarea id="email-action-body" data-bind="value: BodyTemplate" class="input-xxlarge" rows="5"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        <input data-dismiss="modal" type="button" class="btn btn-primary" value="OK" data-bind="click: $root.saveEmail" />
    </div>
</section>