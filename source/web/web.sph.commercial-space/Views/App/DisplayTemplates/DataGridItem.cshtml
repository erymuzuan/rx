@model Bespoke.SphCommercialSpaces.Domain.DataGridItem
@{
    var index = 0;
}
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                @foreach (var c in Model.DataGridColumnCollection)
                {
                    <th>@c.Header</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.ReportRowCollection)
            {
                index++;
                <tr>

                    @foreach (var c in Model.DataGridColumnCollection)
                    {
                        if (c.Expression == "$index")
                        {
                              <td>@index</td>
                        }
                        else
                        {
                            var output = c.GenerateHtml(r);
                            <td>@output</td>
                        }
                    }
                </tr>

            }
        </tbody>
    </table>
</div>
