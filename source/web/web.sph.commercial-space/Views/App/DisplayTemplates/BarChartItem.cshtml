@model Bespoke.SphCommercialSpaces.Domain.BarChartItem

@{
    var id = Guid.NewGuid().ToString();
}

<div>
    <div id="@id"></div>
    <script type="text/javascript">
            (function () {

                $("#@id").kendoChart({
                    title: {
                        text: "@Model.Title"
                    },
                    legend: {
                        position: "bottom"
                    },
                    chartArea: {
                        background: ""
                    },
                    seriesDefaults: {
                        type: "bar"
                    },
                    series: [{
                        name: "@Model.HorizontalAxisField",
                        data: [@Html.Raw(Model.JsonValues)]
                    }],
                    valueAxis: {
                        labels: {
                            format: "@Model.ValueLabelFormat"
                        },
                        line: {
                            visible: false
                        }
                    },
                    categoryAxis: {
                        categories: [@Html.Raw(Model.CategoryAxiesValues)],
                        majorGridLines: {
                            visible: false
                        }
                    },
                    tooltip: {
                        visible: true,
                        format: "{0}%",
                        template: "#= category #: #= value #"
                    }
                });



            })();

    </script>


</div>
