@model Bespoke.Sph.Commerspace.Web.ViewModels.RoleSettingViewModel

@{
    Layout = null;
}

<h1 class="row-fluid">Maklumat Jawatan</h1>
<form class="form-horizontal" data-bind="with: designation">
    
  
    <div class="control-group">
        <label for="Name" class="control-label">Nama jawatan</label>
        <div class="controls">
            <input class="input-xxlarge" data-bind="value: Name" id="Name" type="text" name="Name" />
        </div>
    </div>

    <div class="control-group">
        <label for="description" class="control-label">Keterangan</label>
        <div class="controls">
            <textarea class="input-xxlarge" rows="8" data-bind="value: Description" id="description" name="description"></textarea>
        </div>
    </div>

    <div class="control-group">
        <label for="StartModule" class="control-label">Modul Permulaan</label>
        <div class="controls">
            <select id="StartModule" data-bind="value: StartModule">
                @foreach (var r in Model.Routes.Where(j => j.Visible))
                {
                    <option value="@r.Url">@r.Name</option>
        
                }
            </select>
        </div>
    </div>

    <div class="control-group">
        <span>Sila <i class="icon-ok"></i>bagi menetapkan kebenaran akses bagi jawatan yang ingin didaftarkan</span>
    </div>

    <div data-bind="filter: { path: 'div' }">
        @foreach (var r in Model.Roles)
        {
        
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                        <input data-bind="checked: RoleCollection" value="@r.Role" 
                               type="checkbox" 
                               name="role" />
                        @r.Name

                    </label>
                    @*  *@ <span class="help-block"><strong>Keterangan: </strong>@r.Description</span>
                </div>
            </div>
        }

    </div>
</form>

