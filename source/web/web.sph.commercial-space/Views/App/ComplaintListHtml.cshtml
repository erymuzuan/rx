@{
    ViewBag.Title = "ComplaintListHtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Senarai Aduan</h1>
<form class="form-search">
    <div class="input-append pull-right">
        <input id="complaint-list-filter-text" type="search" class="search-query input-medium" placeholder="Tapis..">
        <i class="add-on icon-remove"></i>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>No. Aduan</th>
            <th>Kategori</th>
            <th>Sub Kategori</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody data-bind="foreach :complaintCollection">
        <tr>
            <td>
                 <a data-bind="attr: { href: '/#/complaint.assign/' + ComplaintId() }, text: ReferenceNo, visible: Status() == 'New'"></a>
                 <a data-bind="attr: { href: '/#/complaint.detail/' + ComplaintId() }, text: ReferenceNo, visible:Status() !='New'"></a>
            </td>
            <td data-bind="text:Category"></td>
            <td data-bind="text: SubCategory"></td>
            <td data-bind="text: Status"></td>
        </tr>
    </tbody>
</table>
