@{
    Layout = null;
}
<div class="navbar navbar-inverse">
    <div class="navbar-inner">
        
        <button class="btn btn-navbar" id="drawer-menu" title="Open menu">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        
        <!-- Site name for smallar screens -->
        <a href="#" class="logo">Sistem Pengurusan Harta</a>

        <!-- Navigation starts -->
        <div class="nav-header">


            @if (User.Identity.IsAuthenticated)
            {
                <!-- Links -->
                <div class="btn-group">
                    <button id="" type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown">
                        <img src="/Images/user_24_white.png" alt="">
                        @User.Identity.Name
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/#/user.profile"><i class="icon-user"></i>Profile</a></li>
                        <li><a href="/#/user.setting"><i class="icon-cogs"></i>Settings</a></li>
                        <li><a href="@Url.Action("Logoff", "Account")"><i class="icon-off"></i>Logout</a></li>
                    </ul>
                </div>
                <!-- Notifications -->
                <ul class="nav navbar-nav">



                    <!-- ko compose : 'viewmodels/messages' -->
                    <!-- /ko -->
                    <!-- ko compose : 'viewmodels/search' -->
                    <!-- /ko -->


                </ul>
            }
            @if (!User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav">
                    <li><a id="log-in" href="@Url.Action("Login", "Account")"><i class="icon-signin"></i>Sign In</a></li>
                </ul>
            }


        </div>


    </div>
</div>
