@{

    Layout = null;
}

<div class="navbar navbar-static-top navbar-inverse">
    <div class="navbar-inner">
        <div class="container">
            
            <button class="btn btn-navbar pull-left" id="drawer-menu" title="Open menu">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

          
            <!-- Site name for smallar screens -->
            <a href="#" class="brand">Sistem Pengurusan <span class="bold">Harta</span></a>

            <!-- Navigation starts -->
            <div class="nav-header">


                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Links -->
                    <div class="btn-group pull-right">
                      <button id="" type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown">
                          <img src="/Images/user_24_white.png" alt="" class="nav-user-pic"> @User.Identity.Name 
                          <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu">
                         <li><a href="#/user.profile"><i class="icon-user"></i>Profile</a></li>
                         <li><a href="#/user.setting"><i class="icon-cogs"></i>Settings</a></li>
                         <li><a href="@Url.Action("Logoff", "Account")"><i class="icon-off"></i>Logout</a></li>
                      </ul>
                    </div>
                <!-- Notifications -->
                <ul class="nav pull-right">

                 
                    
                    <!-- ko compose : 'viewmodels/messages' -->
                    <!-- /ko -->
                    <!-- ko compose : 'viewmodels/search' -->
                    <!-- /ko -->
                   

                </ul>
                }
                @if (!User.Identity.IsAuthenticated)
                {
                   <ul class="nav pull-right">
                    <li><a id="log-in" href="@Url.Action("Login", "Account")"><i class="icon-signin"></i>Sign In</a></li>
                   </ul>
                }
                

            </div>

        </div>
    </div>
</div>
