@model Bespoke.SphCommercialSpaces.Domain.ComplaintTemplate
@{
    Layout = null;
    var i = 0;
}

@foreach (var cf in Model.ComplaintCustomFieldCollection.OrderBy(f => f.Order))
{
    if (cf.Type == "Boolean")
    {
    <div class="control-group" data-bind="with : $root.complaint().CustomFieldValueCollection()[@(i++)]">
        <div class="controls">
            <label class="checkbox">
                <input data-bind="checked: Value" id="ff@(cf.Order)" type="checkbox" name="ff@(cf.Order)" />
                @cf.Name
            </label>
        </div>
    </div>
    }
    else
    {
        
    <div class="control-group" data-bind="with : $root.complaint().CustomFieldValueCollection()[@(i++)]">
        <label for="ff@(cf.Order)" class="span2">@cf.Name:</label>
        <div class="controls">
            @if (cf.Type == "Text")
            {
                <input type="text" data-bind="value: Value" id="ff@(cf.Order)" />
            }

            @if (cf.Type == "DateTime")
            {
                <input type="text" data-bind="kendoDate: Value" id="ff@(cf.Order)" />
            }
            @if (cf.Type == "Number")
            {
                <input type="number" data-bind="value: Value" id="ff@(cf.Order)" />
            }
            @if (cf.Type == "List")
            {
                <select data-bind="value: Value" id="ff@(cf.Order)">
                    @{
                        var options = cf.Listing.Split(new[]{","}, StringSplitOptions.RemoveEmptyEntries);
                    }
                    <option value="">[Sila Pilih]</option>
                    @foreach (var opt in options)
                    {
                        
                    <option value="@opt">@opt</option>
                    }
                </select>
            }
        </div>
    </div>
    
    }

}

