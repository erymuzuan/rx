@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1 class="row-fluid">Pengurusan Pengguna</h1>
</div>
<div class="tabbable row-fluid">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#user-tab" data-toggle="tab">Pengguna</a>
        </li>
        <li>
            <a href="#designation-tab" data-toggle="tab">Tetapan Jawatan</a>
        </li>
        <li>
            <a href="#department-tab" data-toggle="tab">Tetapan Jabatan</a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="user-tab" class="tab-pane active">
            <div>
                <a href="#user-details-modal" id="add-user-button" data-toggle="modal" class="btn btn-link pull-left">
                    <img data-bind="click: addCommand, attr: { src: '/Images/add_user.png' }" src="/Images/add_user.png" alt="Tambah Pengguna" />
                </a>
            </div>
            <table class="table table-striped" data-bind="filter: { path: 'tbody>tr' }">
                <thead>
                    <tr>
                        <th>Nama Pengguna</th>
                        <th>Nama Penuh</th>
                        <th>Jabatan</th>
                        <th>Jawatan</th>
                        <th>Emel</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: profiles">
                    <tr>
                        <td data-bind="text: UserName"></td>
                        <td data-bind="text: FullName"></td>
                        <td data-bind="text: Department"></td>
                        <td data-bind="text: Designation"></td>
                        <td data-bind="text: Email"></td>
                        <td>
                            <a href="#user-details-modal" data-toggle="modal">
                                <img data-bind="click: $root.editCommand, attr: { src: '/Images/edit_icon.png' }" src="/Images/edit_icon.png" alt="Kemaskini" /></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="designation-tab" class="tab-pane ">
            <!--ko compose:'viewmodels/_users.designation' -->
            <!--/ko-->
        </div>
        <div id="department-tab" class="tab-pane ">
            <!--ko compose:'viewmodels/_users.department' -->
            <!--/ko-->
        </div>
    </div>
</div>

