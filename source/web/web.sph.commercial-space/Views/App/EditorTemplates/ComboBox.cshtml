@model Bespoke.SphCommercialSpaces.Domain.ComboBox
<div class="control-group">
    <label for="@Model.Path" class="control-label">@Model.Label</label>
    <div class="controls">
        <select data-bind="value: @Model.Path" id="@Model.Path" name="@Model.Path">
            @foreach (var op in Model.ComboBoxItemCollection)
            {
                <option value="@op.Value">@op.Caption</option>
            }
        </select>
    </div>
</div>
