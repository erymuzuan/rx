@model Bespoke.Sph.Domain.AddressElement
<h3>@Model.Label</h3>
<!-- ko with : Address-->
@if (Model.IsUnitNoVisible)
{

    <div class="form-group">
        <label class="control-label @Model.LabelColumnSpan">No Unit</label>
        <div class="@Model.InputColumnSpan">
            <input class="input-large form-control" type="text" data-bind="value: UnitNo" />
        </div>
    </div>

}

@if (Model.IsBlockVisible)
{

    <div class="form-group">
        <label class="control-label @Model.LabelColumnSpan">Blok</label>
        <div class="col-lg-3">
            @if (!string.IsNullOrWhiteSpace(Model.BlockOptionsPath))
            {

                <select class="input-large" data-bind="value:Block, options :@Model.BlockOptionsPath"></select>
            }
            else
            {

                <input class="input-large" type="text" data-bind="value:Block" />
            }
        </div>
    </div>
}

@if (Model.IsFloorVisible)
{
    <div class="form-group">
        <label class="control-label @Model.LabelColumnSpan">Tingkat</label>
        <div class="col-lg-3">
            <input class="input-large form-control" type="text" data-bind="value:Floor" />
        </div>
    </div>


}

<div class="form-group">
    <label for="address.Street" class="control-label @Model.LabelColumnSpan">Jalan</label>
    <div class="controls">
        <input class="input-large form-control" data-bind="value: Street" id="address.Street" type="text" name="address.Street" />
    </div>
</div>

<div class="form-group">
    <label for="address.City" class="control-label  @Model.LabelColumnSpan">Bandar/Daerah</label>
    <div class="controls">
        <input class="input-xxlarge form-control" data-bind="value: City" id="address.City" type="text" name="address.City" />
    </div>
</div>
<div class="form-group">
    <label for="address.Postcode" class="control-label @Model.LabelColumnSpan">Poskod</label>
    <div class="col-lg-4">
        <input class="input-large form-control" data-bind="value: Postcode" id="address.Postcode" type="text" name="address.Postcode" />
    </div>
</div>
<div class="form-group">
    <label for="address.State" class="control-label @Model.LabelColumnSpan">Negeri</label>
    <div class="col-lg-4">
        <select class="input-large form-control" name="address.State" id="address.State" data-bind="value: State, options: $root.stateOptions, optionsText: 'Name', optionsValue: 'Name', optionsCaption: '[Sila Pilih]'"></select>
    </div>
</div>
<!--/ko-->
