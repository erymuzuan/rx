@model Bespoke.Sph.Domain.ComplaintTemplate
@{
    Layout = null;
}

<h1>@Model.FormDesign.Name</h1>
<span>@Html.Raw(Model.FormDesign.Description)</span>
<form id="complaint-form-detail" class="form-horizontal" data-bind="with: complaint">
    @foreach (var fe in Model.FormDesign.FormElementCollection)
    {
        @Html.EditorFor(m => fe)
        
    }
</form>

<section class="modal hide" id="complaint-ticket-modal" >

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>Aduan anda sudah berjaya dihantar</h3>
    </div>
    <div class="modal-body" data-bind="with : complaint">
        <span>No Rujukan Aduan Anda:</span>
        <strong data-bind="text:ReferenceNo"></strong>
        <span>Sila simpan no rujukan aduan untuk tujuan semakan.</span>
    </div>

    <div class="modal-footer">
         <input data-dismiss="modal" type="button" class="btn btn-primary" value="OK" />
    </div>
</section>
