<section class="btn-group pull-right" data-bind="visible: isSelected">
    <button class="btn btn-link btn-context-action">
        <i class="icon-chevron-sign-right"></i>
    </button>

    <div class="context-action alert alert-info">
        
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <span>Label Properties</span>
        </div>
        <div class="control-group">
            <label  class="control-label">Text</label>
            <div class="controls">
                <textarea class="input-label-html" data-bind="value: Html, valueUpdate: 'keyup'" id="context-action-label" rows="5"></textarea>
            </div>
        </div>
        <div class="control-group">
            <label  class="control-label">Css Class</label>
            <div class="controls">
                <input class="input-label-cssclass" data-bind="value: CssClass, valueUpdate: 'keyup'" type="text" name="CssClass" />
            </div>
        </div>

        <div class="control-group">
            <label  class="control-label">Tooltip</label>
            <div class="controls">
                <input data-bind="value: Tooltip, valueUpdate: 'keyup'" type="text" name="Tooltip" />
            </div>
        </div>


        <a class="btn btn-link pull-right" data-bind="click: $root.removeReportItem">
            <i class="icon-remove"></i>
            Buang
        </a>
        
    </div>
</section>
