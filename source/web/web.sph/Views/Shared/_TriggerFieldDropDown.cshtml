@model Bespoke.Sph.Web.Models.TypeModel

<div class="btn-group">
    <a data-bind="with : @Model.Path, bootstrapDropDown : {}" class="btn btn-link dropdown" href="#">
        <img data-bind="fieldImage : $type" class="pull-left" alt="." />
        <!-- ko text : Name -->
        <!-- /ko -->
        <span class="caret pull-right"></span>
    </a>
    <ul class="dropdown-menu">
        <li data-bind="with : @Model.Path">
            <a class="btn btn-link" data-bind="visible: Name() !== '+ Field',unwrapClick: $parent.editField.call($parent, $data, $parent.@Model.Path)">
                <i class="icon-edit-sign"></i>
                Edit Field
            </a>
        </li>
        <li>
            <a class="btn btn-link" data-bind="unwrapClick: addField, field : 'Document', accessor : $data.@Model.Path" href="#document-panel-modal">+ Document</a>
        </li>
        <li>
            <a class="btn btn-link" data-bind="unwrapClick: addField, field : 'Constant', accessor : $data.@Model.Path" href="#constant-panel-modal">+ Constant</a>
        </li>
        <li>
            <a class="btn btn-link" data-bind="unwrapClick: addField, field : 'Function', accessor : $data.@Model.Path" href="#function-panel-modal">+ Function</a>
        </li>
        <li>
            <a class="btn btn-link" data-bind="unwrapClick: addField, field : 'PropertyChanged', accessor : $data.@Model.Path" href="#changed-panel-modal">+ Property changed</a>
        </li>

    </ul>
</div>