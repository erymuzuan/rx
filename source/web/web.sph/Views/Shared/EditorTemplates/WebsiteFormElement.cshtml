@model Bespoke.Sph.Domain.WebsiteFormElement



@if (Model.IsCompact)
{
    <input class="@(Model.CssClass + " form-control "+ Model.Size)"
           title="@Model.Tooltip"
           data-bind="@(Html.Raw(Model.GetKnockoutBindingExpression()))"
           id="@Model.ElementId" type="url" name="@Model.Path" />

}
else
{
    <div class="control-group">
        <label for="@Model.ElementId" class="@Model.LabelCssClass">@Model.Label</label>
        <div class="@Model.InputPanelCssClass">
            <input class="@(Model.CssClass + " form-control "+ Model.Size)"
                   title="@Model.Tooltip"
                   data-bind="@(Html.Raw(Model.GetKnockoutBindingExpression()))" id="@Model.ElementId" type="url" name="@Model.Path" />
        </div>
    </div>
}