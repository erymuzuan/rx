<telerik:RadWindow x:Class="Bespoke.Sph.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        WindowStartupLocation="CenterScreen"
        Header="Error - The application is shutting down" Height="600" 
                   Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <telerik:RadWatermarkTextBox IsReadOnly="True" x:Name="exceptionMessageTextBox" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <telerik:RadButton Grid.Row="1" HorizontalAlignment="Right" Content="Close" IsCancel="True"/>
    </Grid>
</telerik:RadWindow>
