@using Bespoke.Sph.Domain
@using Bespoke.Sph.FormCompilers.DurandalJs
@using Bespoke.Sph.FormCompilers.DurandalJs.FormElements
@inherits Template<TextAreaElementCompiler>
@{
    var element = Model.Element;
    var required = element.IsRequired ? "required" : null;
}
<textarea @required class="@(element.CssClass + " form-control "+ element.Size) form-control"
          title="@element.Tooltip" data-bind="@Raw(Model.GetKnockoutBindingExpression())"
          id="@element.ElementId" name="@element.Path"></textarea>
