<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:Bespoke.Sph.ControlCenter"
        xmlns:vm="clr-namespace:Bespoke.Sph.ControlCenter.ViewModel"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Bespoke.Sph.ControlCenter.MainWindow"
        Icon="Propeller.ico"
        Height="900" Width="800"
        DataContext="{DynamicResource MainViewModel}"
        WindowStartupLocation="CenterScreen" Title="Rx Developer">
    <Window.Resources>
        <vm:MainViewModel x:Key="MainViewModel" />
        <Style x:Key="LinkStyle" TargetType="{x:Type TextBlock}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RabbitMqServiceStarted}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RabbitMqServiceStarted}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" x:Name="menu">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="WindowExit"/>
            </MenuItem>
            <MenuItem Header="Tools">

            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="AboutClicked"/>
            </MenuItem>
        </Menu>
        <Label Grid.Row="1" Content="Reactive Developer Control Center" FontSize="18" FontWeight="Bold"  />

        <uc:UpdaterView HorizontalAlignment="Right" Grid.Row="1" />

        <GroupBox Header="Service Status" Grid.Row="2" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="15*" />
                    <ColumnDefinition Width="15*" />
                    <ColumnDefinition Width="35*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="1" Content="RabbitMQ" FontWeight="Bold"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Start" Command="{Binding StartRabbitMqCommand}"/>
                <Button Grid.Row="0" Grid.Column="3" Content="Stop" Command="{Binding StopRabbitMqCommand}"/>
                <Image Grid.Row="0" Grid.Column="0" Stretch="None" Source="images/run_exc.gif" Visibility="{Binding RabbitMqServiceStarted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock x:Name="rabbitLink" Style="{StaticResource LinkStyle}" Grid.Row="0" Grid.Column="4">
                    <Hyperlink IsEnabled="{Binding RabbitMqServiceStarted}" NavigateUri="http://localhost:15672/" RequestNavigate="Navigate"><Run Text="View RabbitMQ Management"/></Hyperlink>
                </TextBlock>

                <Label Grid.Row="1" Grid.Column="1" Content="SQL LocalDB" FontWeight="Bold"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Start" Command="{Binding StartSqlServiceCommand}"/>
                <Button Grid.Row="1" Grid.Column="3" Content="Stop" Command="{Binding StopSqlServiceCommand}"/>
                <Image Grid.Row="1" Grid.Column="0" Stretch="None" Source="images/run_exc.gif" Visibility="{Binding SqlServiceStarted, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Label Grid.Row="2" Grid.Column="1" Content="Elasticsearch" FontWeight="Bold"/>
                <Button Grid.Row="2" Grid.Column="2" Content="Start" Command="{Binding StartElasticSearchCommand}"/>
                <Button Grid.Row="2" Grid.Column="3" Content="Stop" Command="{Binding StopElasticSearchCommand}"/>
                <Image Grid.Row="2" Grid.Column="0" Stretch="None" Source="images/run_exc.gif" Visibility="{Binding ElasticSearchServiceStarted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock x:Name="esMarvelLink" Style="{StaticResource LinkStyle}" Grid.Row="2" Grid.Column="4">
                    <Hyperlink IsEnabled="{Binding ElasticSearchServiceStarted}" NavigateUri="http://localhost:9200/_plugin/marvel" RequestNavigate="Navigate"><Run Text="View Elasticsearch Marvel"/></Hyperlink>
                </TextBlock>


                <Label Grid.Row="3" Grid.Column="1" Content="SPH Workers" FontWeight="Bold"/>
                <Button Grid.Row="3" Grid.Column="2" Content="Start" Command="{Binding StartSphWorkerCommand}"/>
                <Button Grid.Row="3" Grid.Column="3" Content="Stop" Command="{Binding StopSphWorkerCommand}"/>
                <Image Grid.Row="3" Grid.Column="0" Stretch="None" Source="images/run_exc.gif" Visibility="{Binding SphWorkerServiceStarted, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Label Grid.Row="4" Grid.Column="1" Content="IIS Express" FontWeight="Bold"/>
                <Button Grid.Row="4" Grid.Column="2" Content="Start" Command="{Binding StartIisServiceCommand}"/>
                <Button Grid.Row="4" Grid.Column="3" Content="Stop" Command="{Binding StopIisServiceCommand}"/>
                <Image Grid.Row="4" Grid.Column="0" Stretch="None" Source="images/run_exc.gif" Visibility="{Binding IisServiceStarted, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock IsEnabled="true" x:Name="webLink" Style="{StaticResource LinkStyle}" Grid.Row="4" Grid.Column="4"><Hyperlink NavigateUri="http://localhost:15672/" RequestNavigate="NavigateApp"><Run Text="View App"/></Hyperlink></TextBlock>
            </Grid>
        </GroupBox>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" Background="Gray" VerticalAlignment="Bottom" Height="3"/>
        <TabControl Grid.Row="3"  >
            <TabItem Header="Output Console">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Clear" Click="CleartOutputText"/>
                        <Button Content="Save" Click="SaveOutputText"/>
                    </StackPanel>
                    <TextBox Grid.Row="1" x:Name="outputTextBox" Margin="0" 
						VerticalScrollBarVisibility="Auto"
						IsReadOnlyCaretVisible="True"
						IsReadOnly="True" Background="#FF302F2F" Foreground="#FFE0DCDC" Text="Please wait ... "/>
                </Grid>
            </TabItem>
            <TabItem Header="Project Settings">
                <uc:ProjectSettingsUserControl  />
            </TabItem>
        </TabControl>
        <telerik:RadBusyIndicator Grid.Row="2" Grid.Column="0" IsBusy="{Binding IsBusy}" BusyContent="Please wait..." d:IsHidden="True" />

    </Grid>
</Window>
