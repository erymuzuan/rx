<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ed.schema.migrator"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        x:Class="ed.schema.migrator.MainWindow"
        Icon="favicon.ico"
        Title="Reactive Developer - EntityDefinition Schema Migration Tool" Height="800" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="253*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="382*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>

        <avalonedit:TextEditor
                    x:Name="textEditor"
                    ShowLineNumbers="True"
                    LineNumbersForeground="#980000"
                    FontFamily="Consolas"
                    FontSize="14"
            Grid.Row="1"
            Text="SELECT * FROM [My].[Ass]"
                    SyntaxHighlighting="sql" />
        <local:ConnectionPanel Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
