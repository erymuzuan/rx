<Window x:Class="observable.generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <ListBox ItemsSource="{Binding TypeCollection}" x:Name="listbox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="60"  Command="{Binding GenerateObservableCommand}" CommandParameter="{Binding ElementName=listbox, Path=SelectedItem}">Go..</Button>
        
        <TextBox Grid.Column="1" AcceptsReturn="True" Text="{Binding ObservableText}"></TextBox>
        
    </Grid>
</Window>
