<Window x:Class="Bespoke.Sph.Mangements.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bespoke.Sph.Mangements"
        mc:Ignorable="d"      WindowStartupLocation="CenterScreen"
        Title="Error - The application is shutting down" Height="600" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox IsReadOnly="True" x:Name="exceptionMessageTextBox" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button Grid.Row="1" HorizontalAlignment="Right" Content="Close" IsCancel="True"/>
    </Grid>
</Window>
